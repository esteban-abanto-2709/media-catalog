generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// VIDEO (Modelo principal)
model Video {
  id          String   @id @default(uuid())

  // Metadatos editoriales (humanos)
  title       String
  description String?
  createdAt   DateTime?

  // Archivo
  filename    String   @unique
  path        String
  size        Int
  uploadedAt  DateTime @default(now())

  // Metadatos t√©cnicos
  duration    Int?
  width       Int?
  height      Int?

  // Provider
  providerUrl String?

  // Sistema
  updatedAt   DateTime @updatedAt

  // Relaciones
  tags        Tag[]
  producers   Producer[]
  actors      Actor[]

  @@index([filename])
  @@index([title])
}

// TAG
model Tag {
  id        String     @id @default(uuid())
  name      String     @unique
  slug      String     @unique
  
  createdAt DateTime   @default(now())
  
  videos Video[]
  
  @@index([slug])
}

// PRODUCER
model Producer {
  id        String          @id @default(uuid())
  name      String          @unique
  slug      String          @unique
  
  createdAt DateTime        @default(now())
  
  videos Video[]
  
  @@index([slug])
}

// ACTOR
model Actor {
  id        String       @id @default(uuid())
  name      String       @unique
  slug      String       @unique
  
  createdAt DateTime     @default(now())
  
  videos Video[]
  
  @@index([slug])
}